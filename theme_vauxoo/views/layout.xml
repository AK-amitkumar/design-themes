<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
    <template id="themes_page" inherit_id="website.themes">
        <xpath expr="//div[@id='themes-list']" position="inside">
            <div class="col-md-4">
                <div class="well text-center">
                    <div class="image">
                        <img
                            src="/theme_vauxoo/static/img/palette/theme_vauxoo.png"
                            class="img-responsive" alt="Zen Theme"/>
                    </div>
                    <div class="options">
                        <h3>Vauxoo's Theme</h3>
                        <p>Zen Theme Vauxoo</p>
                        <a class="btn btn-info"
                        href="/website/theme_change?theme_id=theme_vauxoo.theme_vauxoo_origin">
                        Apply</a>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
    <template id="theme_vauxoo.theme_vauxoo_origin" name="Theme Zen" inherit_id="website.theme" optional="disabled">
        <xpath expr="//link[@id='bootstrap_css']" position="replace">
            <link rel="stylesheet" type="text/css" href="/theme_vauxoo/static/css/theme_vauxoo.css" t-ignore="true"/>
        </xpath>
    </template>
    <template id="assets_frontend" inherit_id="website.assets_frontend" name="Vauxoo FrontEnd Assets">
       <xpath expr="." position="inside">
        <script src="/theme_vauxoo/static/lib/Three.js"></script>
        <script src="/theme_vauxoo/static/lib/Detector.js"></script>
        <script src="/theme_vauxoo/static/lib/RequestAnimationFrame.js"></script>
        <script src="/theme_vauxoo/static/js/theme_vauxoo.js"></script>
        <link rel="stylesheet" type="text/css" href="/theme_vauxoo/static/css/global_theme.css" />
       </xpath>
    </template>
</data>
</openerp>

